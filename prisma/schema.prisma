// prisma/schema.prisma

generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // For Neon + Prisma migrate dev, uncomment and set a separate DB/branch:
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum AccountType {
  CHECKING
  SAVINGS
}

enum TxnType {
  DEBIT
  CREDIT
}

enum Role {
  USER
  STAFF
  ADMIN
  AUDITOR
}

enum UserStatus {
  PENDING
  ACTIVE
  SUSPENDED
}

enum TxnStatus {
  PENDING
  POSTED
}

/* ✅ NEW */
enum AccountStatus {
  ACTIVE
  FROZEN
  CLOSED
}

model User {
  id                String            @id @default(cuid())
  email             String            @unique
  name              String?
  password          String
  role              Role              @default(USER)
  status            UserStatus        @default(PENDING)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  accounts          Account[]
  beneficiaries     Beneficiary[]
  transactions      Transaction[]     @relation("UserTransactions")
  externalTransfers ExternalTransfer[]

  auditLogs         AuditLog[]        @relation("AuditLogActor")
}

model AuditLog {
  id        String   @id @default(cuid())
  actorId   String?
  actor     User?    @relation(name: "AuditLogActor", fields: [actorId], references: [id], onDelete: SetNull)
  action    String
  meta      Json?
  createdAt DateTime @default(now())

  @@index([actorId, createdAt])
}

model Account {
  id                String            @id @default(cuid())

  userId            String
  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  type              AccountType       @default(CHECKING)
  number            String            @unique
  balance           BigInt            @default(0) @db.BigInt
  currency          String            @default("INR")
  createdAt         DateTime          @default(now())

  /* ✅ Used by the freeze feature */
  status            AccountStatus     @default(ACTIVE)

  txns              Transaction[]
  externalTransfers ExternalTransfer[]

  @@index([userId, createdAt])
}

model Beneficiary {
  id            String   @id @default(cuid())
  nickname      String
  accountNumber String
  bankName      String

  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime @default(now())

  @@index([userId])
}

model Transaction {
  id               String     @id @default(cuid())
  type             TxnType
  amountCents      BigInt     @db.BigInt
  description      String?
  counterpartyName String?
  postedAt         DateTime   @default(now())

  status           TxnStatus  @default(POSTED)
  availableAt      DateTime?

  accountId        String
  account          Account    @relation(fields: [accountId], references: [id], onDelete: Cascade)

  userId           String
  user             User       @relation("UserTransactions", fields: [userId], references: [id], onDelete: Cascade)

  @@index([accountId])
  @@index([userId])
  @@index([postedAt])
  @@index([status])
}

model ExternalTransfer {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  amountCents   BigInt   @db.BigInt
  accountNumber String
  ifscCode      String
  recipientName String

  accountId     String
  account       Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)

  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([accountId])
  @@index([userId])
  @@index([accountNumber])
  @@index([ifscCode])
}
