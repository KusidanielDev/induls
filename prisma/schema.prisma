generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AccountType {
  CHECKING
  SAVINGS
}

enum TxnType {
  DEBIT
  CREDIT
}

enum Role {
  USER
  STAFF
  ADMIN
  AUDITOR
}

enum UserStatus {
  PENDING
  ACTIVE
  SUSPENDED
}

model User {
  id            String            @id @default(cuid())
  email         String            @unique
  name          String?
  password      String
  role          Role              @default(USER)
  status        UserStatus        @default(PENDING)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  accounts      Account[]
  beneficiaries Beneficiary[]
  transactions  Transaction[]     @relation("UserTransactions")
  externalTransfers ExternalTransfer[] // Added relation

  // ðŸ”§ Back-relation for AuditLog.actor
  auditLogs AuditLog[] @relation("AuditLogActor")
}

model AuditLog {
  id        String   @id @default(cuid())
  actorId   String?
  actor     User?    @relation(name: "AuditLogActor", fields: [actorId], references: [id])
  action    String
  meta      Json?
  createdAt DateTime @default(now())

  @@index([actorId, createdAt])
}

model Account {
  id        String            @id @default(cuid())
  user      User              @relation(fields: [userId], references: [id])
  userId    String
  type      AccountType       @default(CHECKING)
  number    String            @unique
  balance   Int               @default(0)
  currency  String            @default("INR")
  createdAt DateTime          @default(now())
  txns      Transaction[]
  externalTransfers ExternalTransfer[] // Added relation
}

model Beneficiary {
  id            String   @id @default(cuid())
  nickname      String
  accountNumber String
  bankName      String
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())

  @@index([userId])
}

model Transaction {
  id          String   @id @default(cuid())
  type        TxnType
  amountCents Int
  description String?
  postedAt    DateTime @default(now())
  accountId   String
  account     Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation("UserTransactions", fields: [userId], references: [id], onDelete: Cascade)

  @@index([accountId])
  @@index([userId])
  @@index([postedAt])
}

// NEW MODEL FOR EXTERNAL TRANSFERS
model ExternalTransfer {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  amountCents   Int
  accountNumber String
  ifscCode      String
  recipientName String
  account       Account  @relation(fields: [accountId], references: [id])
  accountId     String
  user          User     @relation(fields: [userId], references: [id])
  userId        String

  @@index([accountId])
  @@index([userId])
  @@index([accountNumber])
  @@index([ifscCode])
}